<launch>

  <include file="$(find turtlebot_bringup)/launch/3dsensor.launch" >
    <arg name="depth_registration" value="true" />
  </include>

  <include file="$(find opencv_detector)/launch/facedetector.launch">
		<arg name="image_topic" value="/camera/rgb/image_color" />
  </include>

  <include file="$(find localizer)/launch/localizer_node.launch" />

  <node pkg="localizer" type="mapper" name="facemapper">
    <remap from="detections" to="/facedetector/faces" />
    <remap from="camera_info" to="/camera/rgb/camera_info" />
    <remap from="mapper" to="/facedetector/markers" />
  </node>

  <node name="face_recognizer_mapper" pkg="task2" type="face_recognizer_mapper" output="screen"/>

  <arg name="custom_param_file" default="$(find turtlebot_navigation)/param/dummy.yaml"/>
  
  <arg name="initial_pose_x" default="0.0"/> <!-- Use 17.0 for willow's map in simulation -->
  <arg name="initial_pose_y" default="0.0"/> <!-- Use 17.0 for willow's map in simulation -->
  <arg name="initial_pose_a" default="0.0"/>
  <include file="$(find turtlebot_navigation)/launch/includes/amcl.launch.xml">
    <arg name="initial_pose_x" value="$(arg initial_pose_x)"/>
    <arg name="initial_pose_y" value="$(arg initial_pose_y)"/>
    <arg name="initial_pose_a" value="$(arg initial_pose_a)"/>
  </include>

  <include file="$(find turtlebot_navigation)/launch/includes/move_base.launch.xml">
    <arg name="custom_param_file" value="$(arg custom_param_file)"/>
  </include>
	
<!--
  <node name="cylinder_segmentation" pkg="cylinder_segmentation" type="cylinder_segmentation" />
-->
  <node name="cylinder_recognizer_mapper" pkg="task2" type="cylinder_recognizer_mapper" output="screen"/>

  <include file="$(find dlib_detector)/launch/dlib_detector.launch">
		<arg name="image_topic" value="/camera/rgb/image_color" />
		<arg name="detections_topic" value="/detector/traffic_signs" />
  	<arg name="detector" value="$(find dlib_detector)/data/traffic_signs.dat"/>
  </include>
<!--
  <node pkg="detection_msgs" type="overlay_visualizer" name="traffic_sign_visualizer" output="screen">
    <remap from="camera" to="/camera/rgb/image_color" />
    <remap from="detections" to="/detector/traffic_signs" />
    <param name="cleanup_delay" value="0" />
  </node>
-->
  <node name="traffic_sign_recognizer_mapper" pkg="task2" type="traffic_sign_recognizer_mapper" output="screen"/>

  
</launch>

